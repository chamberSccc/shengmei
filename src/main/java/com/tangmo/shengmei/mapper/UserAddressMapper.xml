<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tangmo.shengmei.dao.UserDao" >
    <resultMap id="BaseResultMap" type="com.tangmo.shengmei.entity.UserAddress" >
        <id column="ua_id" property="uaId" jdbcType="INTEGER"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="recipient" property="recipient" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List" >

    </sql>
    <insert id="insertSelective" parameterType="com.tangmo.shengmei.entity.UserAddress">
            insert into user_address
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="recipient != null">
                    recipient,
                </if>
                <if test="mobile != null">
                    mobile,
                </if>
                <if test="address != null">
                    address,
                </if>
                <if test="userId != null">
                    user_id,
                </if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="recipient != null">
                    #{recipient,jdbcType=VARCHAR},
                </if>
                <if test="mobile != null">
                    #{mobile,jdbcType=VARCHAR},
                </if>
                <if test="address != null">
                    #{address,jdbcType=VARCHAR},
                </if>
                <if test="userId != null">
                    #{userId,jdbcType=INTEGER},
                </if>
            </trim>
    </insert>

    <update id="updateById" parameterType="com.tangmo.shengmei.entity.UserAddress">
        UPDATE user_address
        <set>
            <if test="mobile != null">
                mobile = #{mobile},
            </if>
            <if test="address != null">
                address = #{username},
            </if>
            <if test="recipient != null">
                recipient = #{username},
            </if>
            updatetime = now()
        </set>
        WHERE user_id = #{userId,jdbcType=INTEGER}
    </update>

    <select id="selectListById" resultMap="BaseResultMap">
        SELECT mobile,recipient,address  FROM user_address WHERE user_id = #{userId}
    </select>
</mapper>